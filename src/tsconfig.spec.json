{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "../out-tsc/spec",
    "types": ["jest", "node"],
    "moduleResolution": "nodenext",
    "paths": {
      "@opencode-ai/sdk": ["../node_modules/@opencode-ai/sdk/dist/index.d.ts"],
