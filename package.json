{
  "name": "opencodesk",
  "version": "0.0.0",
  "description": "OpenCode Desktop Client",
  "homepage": "https://github.com/marmotz/opencodesk",
  "author": {
    "name": "Marmotz",
    "email": "contact@marmotz.dev"
  },
  "keywords": [
    "opencode",
    "desktop",
    "client",
    "ai",
    "agent"
  ],
  "main": "app/main.js",
  "private": true,
  "scripts": {
    "app": "bun --cwd=app",
    "postinstall": "run-p postinstall:*",
    "postinstall:electron": "electron-builder install-app-deps",
    "postinstall:fonts": "cp ./node_modules/@fontsource-variable/*/files/*-latin-wght-normal.woff2 src/assets/fonts/",
    "ng": "ng",
    "start": "run-p electron:serve ng:serve",
    "ng:serve": "ng serve -c web --port 4220",
    "build": "bun run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "bun run build -- -c dev",
    "build:prod": "bun run build -- -c production",
    "web:build": "bun run build -- -c web-production",
    "electron": "electron",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4220 && bun run electron:serve-tsc && run-p electron:serve:*",
    "electron:serve:tsc-watch": "bun run electron:serve-tsc -w",
    "electron:serve:run": "bunx nodemon --watch ./app -i ./app/dist ./app/node_modules --exec 'electron . --serve'",
    "electron:local": "bun run build:dev && electron .",
    "electron:build": "bun run build:prod && electron-builder build --publish=never",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "bun run build:prod && playwright test -c e2e/playwright.config.ts e2e/",
    "e2e:show-trace": "playwright show-trace e2e/tracing/trace.zip",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint"
  },
  "dependencies": {
    "@angular/common": "20.3.5",
    "@angular/compiler": "20.3.5",
    "@angular/core": "20.3.5",
    "@angular/forms": "20.3.5",
    "@angular/language-service": "20.3.5",
    "@angular/platform-browser": "20.3.5",
    "@angular/platform-browser-dynamic": "20.3.5",
    "@angular/router": "20.3.5",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/source-code-pro": "^5.2.7",
    "@fortawesome/angular-fontawesome": "^3.0.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@opencode-ai/sdk": "^0.15.7",
    "@primeuix/themes": "^1.2.5",
    "@tailwindcss/postcss": "^4.1.14",
    "diff": "^8.0.2",
    "marked": "^16.0.0",
    "ngx-markdown": "^20.1.0",
    "postcss": "^8.5.6",
    "primeng": "^20.2.0",
    "prismjs": "^1.30.0",
    "rxjs": "7.8.2",
    "strip-ansi": "^7.1.2",
    "tailwindcss": "^4.1.14",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "2.8.1",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "20.0.0",
    "@angular-builders/jest": "20.0.0",
    "@angular/build": "^20.3.6",
    "@angular/cli": "20.3.6",
    "@angular/compiler-cli": "20.3.5",
    "@ngx-translate/core": "17.0.0",
    "@ngx-translate/http-loader": "17.0.0",
    "@playwright/test": "1.56.0",
    "@types/jest": "30.0.0",
    "@types/node": "24.7.2",
    "@types/prismjs": "^1.26.5",
    "conventional-changelog-cli": "5.0.0",
    "electron": "38",
    "electron-builder": "26.1.0",
    "electron-debug": "4.1.0",
    "electron-reloader": "1.2.3",
    "jest": "30.2.0",
    "node-polyfill-webpack-plugin": "4.1.0",
    "npm-run-all": "4.1.5",
    "playwright": "1.56.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "wait-on": "9.0.1",
    "webdriver-manager": "12.1.9"
  },
  "browserslist": [
    "chrome 140"
  ]
}
