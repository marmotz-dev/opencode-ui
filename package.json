{
  "name": "opencode-ui",
  "version": "0.2.0",
  "description": "OpenCode Desktop Client",
  "homepage": "https://github.com/marmotz/opencode-ui",
  "author": {
    "name": "Marmotz",
    "email": "contact@marmotz.dev"
  },
  "keywords": [
    "opencode",
    "desktop",
    "client",
    "ai",
    "agent"
  ],
  "main": "main/src/main.js",
  "private": true,
  "scripts": {
    "main": "bun --cwd=main",
    "postinstall": "bun run postinstall:electron && bun run postinstall:fonts",
    "postinstall:electron": "electron-builder install-app-deps",
    "postinstall:fonts": "bun -e \"import {$} from 'bun'; await $`cp ./node_modules/@fontsource-variable/*/files/*-latin-wght-normal.woff2 src/assets/fonts/`; // 1256\"",
    "ng": "ng",
    "start": "run-p electron:serve ng:serve",
    "ng:serve": "ng serve -c web --port 4220",
    "build": "bun run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "bun run build -- -c dev",
    "build:prod": "bun run build -- -c production",
    "web:build": "bun run build -- -c web-production",
    "electron": "electron",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4220 && bunx nodemon --watch main/src -e ts --exec 'bun run electron:serve-tsc && electron . --serve'",
    "electron:local": "bun run build:dev && electron .",
    "electron:build": "bun run build:prod && electron-builder build --publish=never --win --mac --linux",
    "electron:build:win": "bun run build:prod && electron-builder build --publish=never --win",
    "electron:build:mac": "bun run build:prod && electron-builder build --publish=never --mac",
    "electron:build:linux": "bun run build:prod && electron-builder build --publish=never --linux",
    "electron:build:linux:app-image": "bun run build:prod && electron-builder build --publish=never --linux=AppImage",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "lint": "prettier --check .",
    "lint:fix": "bun lint --write",
    "update:minor": "bunx npm-check-updates -i -t minor",
    "update:latest": "bunx npm-check-updates -i -t latest",
    "bump:patch": "bunx bumpp --release patch package.json main/package.json",
    "bump:minor": "bunx bumpp --release minor package.json main/package.json",
    "bump:major": "bunx bumpp --release major package.json main/package.json"
  },
  "dependencies": {
    "@angular/common": "20.3.9",
    "@angular/compiler": "20.3.9",
    "@angular/core": "20.3.9",
    "@angular/forms": "20.3.9",
    "@angular/language-service": "20.3.9",
    "@angular/platform-browser": "20.3.9",
    "@angular/platform-browser-dynamic": "20.3.9",
    "@angular/router": "20.3.9",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/source-code-pro": "^5.2.7",
    "@fortawesome/angular-fontawesome": "^3.0.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@opencode-ai/sdk": "^1.0.7",
    "@primeuix/themes": "^1.2.5",
    "@tailwindcss/postcss": "^4.1.16",
    "diff": "^8.0.2",
    "marked": "^16.4.1",
    "ngx-markdown": "^20.1.0",
    "postcss": "^8.5.6",
    "primeng": "^20.3.0",
    "prismjs": "^1.30.0",
    "rxjs": "7.8.2",
    "strip-ansi": "^7.1.2",
    "tailwindcss": "^4.1.16",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "2.8.1",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "20.0.0",
    "@angular-builders/jest": "20.0.0",
    "@angular/build": "^20.3.8",
    "@angular/cli": "20.3.8",
    "@angular/compiler-cli": "20.3.9",
    "@ngx-translate/core": "17.0.0",
    "@ngx-translate/http-loader": "17.0.0",
    "@types/jest": "30.0.0",
    "@types/node": "22",
    "@types/prismjs": "^1.26.5",
    "conventional-changelog-cli": "5.0.0",
    "electron": "39",
    "electron-builder": "26.1.0",
    "electron-debug": "4.1.0",
    "electron-reloader": "1.2.3",
    "jest": "30.2.0",
    "node-polyfill-webpack-plugin": "4.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "wait-on": "9.0.1",
    "webdriver-manager": "12.1.9"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}
