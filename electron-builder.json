{
  "appId": "dev.marmotz.opencode-ui",
  "productName": "opencode-ui",
  "asar": false,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": ["nsis"]
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": ["deb", "rpm", "AppImage"],
    "category": "Development;IDE;",
    "desktop": {
      "entry": {
        "Name": "OpenCode UI",
        "Comment": "OpenCode Desktop Client - AI coding agent",
        "Keywords": "ai;coding;agent;development;",
        "StartupWMClass": "opencode-ui",
        "StartupNotify": true
      }
    }
  }
}
